{
  "name": "gitea-oidc",
  "version": "1.0.27",
  "type": "module",
  "description": "Simple OpenID Connect Identity Provider using Fastify and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rolldown -c rolldown.config.ts",
    "build:prod": "rolldown -c rolldown.config.prod.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "release": "release-it",
    "generate-jwks": "tsx scripts/generate-jwks.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!dist\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!node_modules\" \"!dist\"",
    "prepare": "husky"
  },
  "keywords": [
    "oidc",
    "idp",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/koa": "^3.0.1",
    "@types/node": "^22.0.0",
    "@types/oidc-provider": "^9.5.0",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "4.0.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.19.0",
    "release-it": "^19.0.6",
    "rolldown": "1.0.0-beta.47",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/middie": "^9.0.0",
    "@fastify/static": "^8.3.0",
    "@larksuiteoapi/node-sdk": "^1.55.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "fastify": "^5.6.1",
    "jose": "^6.1.2",
    "oidc-provider": "^9.5.2",
    "pg": "^8.16.3",
    "redis": "^5.9.0",
    "zod": "^4.1.12"
  }
}
