{
  "name": "gitea-oidc",
  "version": "1.0.0",
  "type": "module",
  "description": "Simple OpenID Connect Identity Provider using Fastify and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rolldown -c rolldown.config.ts",
    "build:prod": "rolldown -c rolldown.config.prod.ts",
    "start": "node dist/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "release": "release-it"
  },
  "keywords": [
    "oidc",
    "idp",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/node": "^22.0.0",
    "@types/oidc-provider": "^9.5.0",
    "jest": "^30.2.0",
    "release-it": "^19.0.6",
    "rolldown": "1.0.0-beta.47",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/middie": "^9.0.0",
    "@fastify/static": "^8.3.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "fastify": "^5.6.1",
    "oidc-provider": "^9.5.2",
    "zod": "^4.1.12"
  }
}
